    "require":{
        "php": ">=5.3",
        "contao/core": ">=3.3.0,<3.6",
        "contao-community-alliance/composer-plugin": "~2.0"
    },
    "replace": {
        "contao-legacy/calendarfield": "self.version",
        "terminal42/contao-calendarfield": "self.version"
