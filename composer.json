        "contao": {
            "sources":{
                "CT_ROOT/assets/hofff/calendarfield": "assets/hofff/calendarfield",
                "CT_ROOT/system/modules/hofff_calendarfield": "system/modules/hofff_calendarfield"
            }
        },
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
